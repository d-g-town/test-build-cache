{
  "name": "test-build-cache",
  "version": "1.0.0",
  "description": "Simple application to test Docker caching strategies",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "echo \"Running tests...\" && sleep 2 && echo \"Tests passed!\"",
    "lint": "echo \"Linting code...\" && sleep 1",
    "docker:build": "docker build -t test-build-cache .",
    "docker:build-no-cache": "docker build --no-cache -t test-build-cache .",
    "docker:run": "docker run --rm -p 3000:3000 test-build-cache",
    "docker:test-cache": "./scripts/test-cache.sh"
  },
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.0",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}